<?php
/** @var xPDOTransport $transport */
/** @var array $options */
/** @var modX $modx */
if ($transport->xpdo) {
    $modx =& $transport->xpdo;

    $dev = MODX_BASE_PATH . 'Extras/modB24CRM/';
    /** @var xPDOCacheManager $cache */
    $cache = $modx->getCacheManager();
    if (file_exists($dev) && $cache) {
        if (!is_link($dev . 'assets/components/modb24crm')) {
            $cache->deleteTree(
                $dev . 'assets/components/modb24crm/',
                ['deleteTop' => true, 'skipDirs' => false, 'extensions' => []]
            );
            symlink(MODX_ASSETS_PATH . 'components/modb24crm/', $dev . 'assets/components/modb24crm');
        }
        if (!is_link($dev . 'core/components/modb24crm')) {
            $cache->deleteTree(
                $dev . 'core/components/modb24crm/',
                ['deleteTop' => true, 'skipDirs' => false, 'extensions' => []]
            );
            symlink(MODX_CORE_PATH . 'components/modb24crm/', $dev . 'core/components/modb24crm');
        }
    }
}

return true;